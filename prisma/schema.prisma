generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notes {
  noteid  String   @id @unique @default(uuid())
  title   String
  crDate  DateTime @default(now())
  upDate  DateTime @updatedAt
  content String
  stared  Boolean  @default(false)
  ownerid String
  owner   Users    @relation(fields: [ownerid], references: [userid], onDelete: Cascade)
}

model Users {
  userid   String  @id @unique @default(uuid())
  nFirst   String
  nLast    String
  passHash String
  email    String  @unique
  Notes    Notes[]
}
